{
  "manifest_version": 3,
  "name": "ProductivityPal",
  "description": "Regain control of your life and crush your addiction to short videos and endless scrolling with your ProductivityPal.",
  "version": "1.0",
  "icons": {
    "16": "images/icon-16.png",
    "32": "images/icon-32.png",
    "48": "images/icon-48.png",
    "128": "images/icon-128.png"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "permissions": [
    "storage"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": [
        "scripts/index.js"
      ],
      "css": [
        "styles/index.css"
      ]
    }
  ]
}